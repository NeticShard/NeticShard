---
import Layout from "../layouts/Layout.astro";
---

<Layout title="NeticShard">
  <main>
    <h1 style="display: none;">{"NeticShard"}</h1>
    <div id="container">
      <h2>Project in progress</h2>

      <ul>
        <li>
          LinkedIn:
          <a target="_blank" href="https://www.linkedin.com/company/neticshard"
            >@neticshard</a
          >
        </li>
        <li>
          GitHub:
          <a target="_blank" href="https://github.com/NeticShard">@NeticShard</a
          >
        </li>
      </ul>

      <h3>
        <a target="_blank" href="https://discord.neticshard.com"
          >Join to our Discord</a
        >
      </h3>
    </div>
  </main>
</Layout>

<style>
  * {
    margin: 0;
    padding: 0;
  }

  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  a {
    color: #535c91;
  }

  a:hover {
    color: #9290c3;
  }

  #container {
    margin: auto;
  }

  #container h2 {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  #container h3 {
    margin-top: 3rem;
    text-align: center;
  }

  #container ul {
    list-style: none;
    text-align: center;
  }
</style>
